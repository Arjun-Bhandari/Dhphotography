<% layout('/layouts/boilerplate.ejs') -%>


    <form method="POST" action="/" novalidate class="needs-validation" enctype="multipart/form-data">
        <div id="post-container">
            <h2>Create Post</h2>

            <div id="image-preview-container"></div>

            <label for="file-input" id="file-label">Select Image</label>
            <input type="file" id="file-input" name="Image[image]" accept="image/*" onchange="previewImage(event)">

            <input placeholder="Write your Type of photograph...eg: wedding/prewedding etc" name="Image[type]" rows="4"
                style="width: 100%; margin-bottom: 20px;">
            <div class="invalid-feedback">Please Enter A Type</div>
            <button class="btn btn-success">Upload</button>
        </div>
    </form>

    